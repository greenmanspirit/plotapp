<%= form_for([@story, @character], :html => {:multipart => true}) do |f| %>
  <% if @character.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
      <% @character.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table id="profile">
<tr>
<td id="profilePhoto">
<%= image_tag @character.photo.url(:profile) %>
<%= f.file_field :photo %>
</td>
<td>
<%= f.text_field :name, :id=>'characterName', :class=>"maxwidth" %>
<p>
Age:<%= f.text_field :age, :size=>5%><br/>
Birthdate:<%= f.text_field :birthdate %><br/>
Hometown:<%= f.text_field :hometown %><br/>
Parents:<%= f.text_field :parents %>
</p>
</td>
</tr>
<tr>
<td colspan="2"><%= f.text_area :other, :class=>:maxwidth %></td>
</tr>
<tr>
<td colspan="2">
<div>
To add a quark click 'Add'. To delete a quark, click the checkbox beside the quark you want to remove and it will be deleted upon saving.
</div>
<div class="list">
<h2>Virtues</h2>
<ul id="virtueListForm">
	<%= f.fields_for :virtues do |virtue| %>
		<li>
			<%= virtue.check_box "_destroy" %>
			<%= virtue.text_field :detail, :class=>'virtue, maxwidth' %>
		</li>
	<% end %>
</ul>
<%= link_to 'Add', '/#', :id=>'addVirtueLink', :remote=>true %>
</div>
<div class="list">
<h2>Vices</h2>
<ul id="viceListForm">
	<%= f.fields_for :vices do |vice| %>
		<li>
			<%= vice.check_box "_destroy" %>
			<%= vice.text_field :detail, :class=>'vice, maxwidth' %>
		</li>
	<% end %>
</ul>
<%= link_to 'Add', '/#', :id=>'addViceLink', :remote=>true %>
</div>
<div class="list">
<h2>Habit</h2>
<ul id="habitListForm">
	<%= f.fields_for :habits do |habit| %>
		<li>
			<%= habit.check_box "_destroy" %>
			<%= habit.text_field :detail, :class=>'habit, maxwidth' %>
		</li>
	<% end %>
</ul>
<%= link_to 'Add', '/#', :id=>'addHabitLink', :remote=>true %>
</div>
</td>
</tr>
</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
