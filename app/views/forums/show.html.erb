<p id="notice"><%= notice %></p>

<table class="forum">
  <tr>
    <td><%= @forum.title %></td>
    <td class="topicCount"><%= @forum.topics.count %></td>
  </tr>
  <tr>
    <td class="forumDesc"><%= @forum.description %></td>
    <td class="topicCount forumDesc">Topics</td>
  </tr>
</table>
<% if can? :create, Topic then %>
<%= link_to 'New Topic', new_forum_topic_path(@forum) %>
<% end %>
<% if can? :manage, @forum then %>
<%= link_to 'Edit', edit_forum_path(@forum) %>
<% end %>

<table class="topicList">
<tr>
  <th>Topic</th>
  <th class="topicPostCount"># Posts</th>
  <th class="topicPostAuthor">Last post</th>
</tr>
<% @forum.topics.each do |topic| %>
    <% if current_author.topictracks.new_in_topic? topic, current_author then %>
    <% classf = 'unread' %>
    <% else %>
    <% classf = 'read' %>
    <% end %>
    <tr class="<%= classf %>">
	<td>
		<%= link_to topic.title, topic %>
	</td>
	<td class="topicPostCount">
		<%= topic.posts.count %>
	</td>
	<td class="topicPostAuthor">
		<%= topic.posts.last.author.username %> <br/> <%= topic.posts.last.created_at.strftime('%d/%m/%y %H:%M') %>
	</td>
    </tr>
<% end %>
</table>

